@page
@using HotelManagementSystem
@using HotelManagementSystem.Controllers.Account
@namespace HotelManagementSystem.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginController
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/HotelManagementSystem.styles.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3" style="margin-top: 100px">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-10">
                    <div class="login-container">
                        <h1 style="font-size: 40px; text-align: center; padding-top: 75px" class="bold-text">Login To HMS</h1>
                        <form style="padding: 0px 70px" method="post">
                            <div class="mb-3">
                                <label class="bold-text">USERNAME</label>
                                <input type="text" class="form-control" placeholder="Enter your username" name="username" value="@ViewBag.Username" required>
                            </div>
                            <div class="mb-3">
                                <label class="bold-text">PASSWORD</label>
                                <input type="password" class="form-control" placeholder="Enter your password" name="password" required>
                            </div>
                            @if (ViewBag.ErrorMSG != null)
                            {
                                <h5 class="bold-text" style="color: red; text-align: center; font-size: 16px">@ViewBag.ErrorMSG</h5>
                            }
                            <button type="submit" class="btn btn-primary w-100 btn-large-round" style="border-radius: 50px">Login</button>
                            <a href="/Accounts/ForgotPassword" style="font-weight: bold" class="forgot-password">Forgot password</a>
                        </form>
                    </div>

                </div>
                <div class="col-md-2"></div>
            </div>

        </main>
    </div>
</body>
</html>